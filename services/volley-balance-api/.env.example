# Environment configuration example
# Copy this file to .env for local development

NODE_ENV=development

# Database configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=volleyball
DB_USER=volleyball_app
DB_PASSWORD=your_password_here

# For local development, you can use environment variables instead of Secret Manager
# In production (GKE), secrets are loaded from GCP Secret Manager

# GCP Configuration (for production)
GCP_PROJECT_ID=atikot-org-share-project

# Server configuration
PORT=8081
